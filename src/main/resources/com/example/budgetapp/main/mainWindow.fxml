<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #2e2e2e;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.budgetapp.controllers.MainWindowController">
   <top>
      <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="800.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="50.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            <Button mnemonicParsing="false" onAction="#handleIncome" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2e2e2e;" text="Dodaj przychód" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#handleExpenses" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2e2e2e;" text="Dodaj wydatek" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#handleEdit" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2e2e2e;" text="Edytuj" textFill="WHITE" />
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2e2e2e;" text="Wykresy" textFill="WHITE" />
            <MenuButton alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #2e2e2e;" text="Menu" textAlignment="RIGHT" textFill="WHITE">
              <items>
                 <MenuItem onAction="#handleCategoryDictionary" text="Słownik kategorii" />
                 <MenuItem onAction="#handleSubcategoryDictionary" text="Słownik podkategorii" />
                 <MenuItem onAction="#handleLogout" text="Wyloguj się" />
              </items>
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </MenuButton>
         </children>
         <padding>
            <Insets right="10.0" top="10.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
   </top>
   <center>
      <!-- Tabela wyświetlająca dane -->
      <TableView fx:id="expensesTable" prefHeight="450.0" prefWidth="508.0" style="-fx-background-color: #2e2e2e;" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="monthColumn" prefWidth="150.0" text="Miesiąc" />
            <TableColumn fx:id="yearColumn" prefWidth="100.0" text="Rok" />
            <TableColumn fx:id="incomeColumn" prefWidth="150.0" text="Przychód" />
            <TableColumn fx:id="rentColumn" prefWidth="150.0" text="Czynsz" />
            <TableColumn fx:id="adminRentColumn" prefWidth="150.0" text="Czynsz administracyjny" />
         </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
